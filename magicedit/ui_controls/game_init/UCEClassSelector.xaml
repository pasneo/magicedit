<UserControl x:Class="magicedit.UCEClassSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:magicedit"
             mc:Ignorable="d">
    <Grid>
        <TextBlock x:Name="tbClasslistName" VerticalAlignment="Center">Class</TextBlock>
        <ComboBox x:Name="cbClass" HorizontalAlignment="Left" Margin="120,0,0,0" Width="150" SelectionChanged="cbClass_SelectionChanged"></ComboBox>
    </Grid>
</UserControl>
