<local:ParameterRow x:Class="magicedit.UCEParameterRow_Number"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:magicedit"
             mc:Ignorable="d">
    <Grid>
        <TextBlock x:Name="tbParamName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="NoOfItems" VerticalAlignment="Center"/>
        <local:IntegerUpDown x:Name="iValue" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,0,0,0" Width="100"
                             ValueChanged="iValue_ValueChanged"/>
    </Grid>
</local:ParameterRow>
