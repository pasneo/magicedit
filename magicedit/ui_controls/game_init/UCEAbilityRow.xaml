<UserControl x:Class="magicedit.UCEAbilityRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:magicedit"
             mc:Ignorable="d">
    
    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
        <TextBlock x:Name="tbAbilityName" Width="150" VerticalAlignment="Center">Strength</TextBlock>
        <local:UCEAbilityButton x:Name="nbAbilityValue" ValueIncreased="nbAbilityValue_ValueIncreased" ValueDecreased="nbAbilityValue_ValueDecreased"/>
    </StackPanel>
    
</UserControl>
